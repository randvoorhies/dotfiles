export PATH=/bin:/sbin:/usr/bin:/usr/sbin:/usr/local/bin:/usr/local/sbin:/usr/X11/bin

# python startup rc 
export PYTHONSTARTUP="${HOME}/.pythonrc"

# special stuff for osx only
if [ `uname` = 'Darwin' ]; then
  export PATH=$PATH:/Library/Frameworks/Python.framework/Versions/2.7/bin
  
  # for some reason gpg is installed here 
  export CPATH=$CPATH:/opt/usr/include
  export LIBRARY_PATH=$LIBRARY_PATH:/opt/usr/lib
  export PATH=$PATH:/opt/usr/bin

  # macports
  export CPATH=/opt/local/include:$CPATH
  export DYLD_FALLBACK_LIBRARY_PATH=$DYLD_FALLBACK_LIBRARY_PATH:/opt/local/lib
  export LIBRARY_PATH=/opt/local/lib:$LIBRARY_PATH
  export PATH=/opt/local/bin:/opt/local/sbin:$PATH
  export PKG_CONFIG_PATH=/usr/lib/pkgconfig

  # extra
  export COURSES="${HOME}/USC/Courses/"
  export PATH=~/Local/bin:$PATH
fi

# special commands for my server
if [ `hostname` = 'tardis' ]; then
  [[ -s "$HOME/.rvm/scripts/rvm" ]] && . "$HOME/.rvm/scripts/rvm" # Load RVM function
fi
