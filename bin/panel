#!/bin/bash

readonly PANEL_FIFO=/tmp/panel-fifo
readonly PANEL_HEIGHT=46
readonly PANEL_FONT_FAMILY="UbuntuMono:size=12"
readonly ICON_FONT="FontAwesome:size=11"
readonly ICON_FONT2="fontcustom:size=11"

if [ $(pgrep -cx panel) -gt 1 ] ; then
	printf "%s\n" "The panel is already running." >&2
	exit 1
fi

trap 'trap - TERM; kill 0' INT TERM QUIT EXIT

[ -e "$PANEL_FIFO" ] && rm "$PANEL_FIFO"
mkfifo "$PANEL_FIFO"

bspc config top_padding $PANEL_HEIGHT
bspc control --subscribe > "$PANEL_FIFO" &
xtitle -sf 'T%s' > "$PANEL_FIFO" &

# clock
#while true;
#	do 
#		echo -e 'C\uf017' $(date +"%l:%M %p");
#	sleep 5;
#done > "$PANEL_FIFO" &

while true;
	do 
  TIME=$(date "+%A %b %d %I:%M");
  echo -e "S%{F#FFffffff}î€—%{F-} ${TIME}";
	sleep 5;
done > "$PANEL_FIFO" &

# date
while true;
do echo -e 'D\uf073' $(date +'%b %d')
	sleep 5
done > $PANEL_FIFO &

# alsa volume
while true;
do
ALSA_VOLUME=$(amixer get Master | grep 'Right: Playback' | grep -o '...%' | sed 's/\[//' | sed 's/%//' | sed 's/ //')
ALSA_STATE=$(amixer get Master | grep 'Right: Playback' | grep -o '\[on]')

if [ $ALSA_STATE ]
then
	if [ $ALSA_VOLUME -ge 70 ]
	then
		echo -e V'\uf028' $ALSA_VOLUME
	fi
	if [ $ALSA_VOLUME -gt 0 -a $ALSA_VOLUME -lt 70 ]
	then
		echo -e V'\uf027' $ALSA_VOLUME
	fi
	if [ $ALSA_VOLUME -eq 0 ]
	then
		echo -e V'\uf026' $ALSA_VOLUME
	fi
	else
		echo -e V'\uf026' $ALSA_VOLUME
	fi
	sleep 0.1
done > $PANEL_FIFO &

# power 
echo -e P'\uf011' > $PANEL_FIFO &

. panel_colors

cat "$PANEL_FIFO" | panel_bar | lemonbar -g x$PANEL_HEIGHT -f "$PANEL_FONT_FAMILY" -f "$ICON_FONT" -f "$ICON_FONT2" -F "$COLOR_FOREGROUND" -B "$COLOR_BACKGROUND" -u 2 | bash &

wait
