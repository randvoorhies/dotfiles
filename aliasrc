alias axel='axel -a'
alias diff='diff -y --suppress-common-lines'
alias find='LC_ALL="C" find'
alias grep='LC_ALL="C" grep --color'
alias mkdir='mkdir -p'
alias pid='ps -o pid --no-header -C'
alias sprunge='curl -F "sprunge=<-" http://sprunge.us'
alias vim='vim -p'

# aliases for osx only
if [ `uname` = 'Darwin' ]; then
  alias gvim='mvim -p'
  alias seq='gseq'
else
  alias gvim='gvim -p'
fi

# special aliases for my server
if [ `hostname` = 'tardis' ]; then
  alias addkey='sudo apt-key adv --recv-keys --keyserver keyserver.ubuntu.com'
  alias pid='ps -o pid --no-header -C'
  alias ping='mtr'
  alias rvm-restart='rvm_reload_flag=1 source '\''/home/sagar/.rvm/scripts/rvm'\'''
fi
